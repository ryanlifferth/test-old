        </div>
        <div class="col-md-6 grid-input grid-adjust">
            <input type="number" id="DateOfSaleAdjust@(compVar)" placeholder="" class="form-control" />
        </div>
        @Helpers.ParcelHelpers.BuildInputFlyout()
    </div>
    <div class="row grid-row">
